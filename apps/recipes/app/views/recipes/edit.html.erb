<h1>Edit Your Recipe</h1>

<%= form_for :recipe, url: recipe_path(@recipe), method: :patch do |f| %>

<p>
<%= f.label :name %>
<%= f.text_field :name %>
</p>

<p>
	<%= f.label :description %>
	<%= f.text_area :description %>
</p>

<p>
	<%= f.label :instructions %>
	<%= f.text_area :instructions %>
</p>

<% end %>
<!-- go back to recipe that has been worked on (not recipes_path)-->
<%= link_to "Back To Recipe", recipe_path(@recipe) %>

