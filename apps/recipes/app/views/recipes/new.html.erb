<h1>New Recipe</h1>

<%= form_for :recipe, url: recipes_path do |f| %>

	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :description %><br>
		<%= f.text_area :description%>
	</p>

	<p>
		<%= f.label :instructions %><br>
		<%= f.text_area :instructions%>
	</p>


	<p>
		<%= f.submit %>
	</p>

	<%= link_to "Back to All Recipes", recipes_path %>

	<% end %>